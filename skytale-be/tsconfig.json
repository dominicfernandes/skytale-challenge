{
  "compilerOptions": {
    "target": "es5",                                 
    "module": "commonjs",                               
    "rootDir": "./src",                            
    "sourceMap": true,                             
    "outDir": "./build",                                   
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,      
    "strict": true,                                    
    "skipLibCheck": true,
	"strictPropertyInitialization": false,
	"experimentalDecorators": true  
  }
}
